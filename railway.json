{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install"
  },
  "deploy": {
    "startCommand": "node server.js",
    "healthcheckPath": "/",
    "healthcheckTimeout": 10,
    "healthcheckInterval": 30,
    "restartPolicyType": "ALWAYS",
    "startTimeout": 180
  }
}
